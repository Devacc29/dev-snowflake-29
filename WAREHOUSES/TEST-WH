USE ROLE SYSADMIN;

CREATE OR REPLACE WAREHOUSE GIT_WH
WITH
WAREHOUSE_TYPE = STANDARD
WAREHOUSE_SIZE = XSMALL
MAX_CLUSTER_COUNT = 3
MIN_CLUSTER_COUNT = 1
INITIALLY_SUSPENDED = TRUE
COMMENT = 'GIT ware house';

SHOW WAREHOUSES;

DESCRIBE WAREHOUSE GIT_WH;

ALTER WAREHOUSE GIT_WH 
SET 
-- WAREHOUSE_SIZE = SMALL
-- MAX_CLUSTER_COUNT = 10
AUTO_SUSPEND = 300;

-- DROP WAREHOUSE GIT_WH;
